<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/text_view_rank"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:text="rank"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/text_view_description"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:layout_below="@id/text_view_rank"
        android:text="description"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/text_view_date"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:layout_below="@id/text_view_description"
        android:text="date"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="24sp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/linear_layout_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_view_date"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/text_view_retardation"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="retardation"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="24sp"/>

        <Button
            android:id="@+id/button_remove"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="remove"
            android:textColor="@color/colorPrimaryDark" />

    </LinearLayout>




</RelativeLayout>