<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <TextView
            android:id="@+id/text_view_rank"
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:text="rank"
            android:textColor="@color/colorPrimaryDark"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/text_view_description"
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:layout_below="@id/text_view_rank"
            android:text="description"
            android:textColor="@color/colorPrimaryDark" />
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="4"
            android:layout_below="@id/text_view_description">
            
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/text_view_date"
                    android:layout_width="match_parent"
                    android:layout_height="32dp"
                    android:layout_below="@id/text_view_description"
                    android:text="date"
                    android:textColor="@color/colorPrimaryDark"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/text_view_retardation"
                    android:layout_width="match_parent"
                    android:layout_height="32dp"
                    android:layout_below="@id/text_view_date"
                    android:text="retardation"
                    android:textColor="@color/colorPrimaryDark" />

            </LinearLayout>

            <Button
                android:id="@+id/button_delete"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:focusable="false"
                android:text="delete"
                android:textColor="@color/colorPrimaryDark" />
            
        </LinearLayout>

    </RelativeLayout>

</androidx.cardview.widget.CardView>